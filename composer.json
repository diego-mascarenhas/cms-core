{
    "name": "idoneo/cms-core",
    "description": "Multi-tenant CMS foundation with Teams support, Livewire components and Filament integration for Laravel.",
    "keywords": [
        "laravel",
        "filament",
        "cms",
        "jetstream",
        "teams",
        "livewire",
        "spatie",
        "multi-tenant"
    ],
    "homepage": "https://github.com/diego-mascarenhas/cms-core",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Diego Mascarenhas Goyt√≠a",
            "email": "diego.mascarenhas@icloud.com",
            "homepage": "https://linkedin.com/in/diego-mascarenhas"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "filament/spatie-laravel-media-library-plugin": "^4.0",
        "filament/spatie-laravel-tags-plugin": "^4.0",
        "illuminate/contracts": "^11.0|^12.0",
        "laravel/jetstream": "^5.0",
        "laravel/sanctum": "^4.0",
        "livewire/livewire": "^3.0",
        "spatie/laravel-medialibrary": "^11.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-tags": "^4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Idoneo\\CmsCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Idoneo\\CmsCore\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Idoneo\\CmsCore\\CmsCoreServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
